      <children>
            <TextField fx:id="passwordtextfield" layoutX="231.0" layoutY="197.0" />
            <TextField fx:id="usernametextfield" layoutX="231.0" layoutY="145.0" />
            <Label fx:id="usernamelabel" layoutX="150.0" layoutY="148.0" text="USERNAME" />
            <Label fx:id="passwordlabel" layoutX="147.0" layoutY="201.0" prefHeight="0.0" prefWidth="54.0" text="Password" />
